<h1><%=@restaurant.name%></h1>



<% if @restaurant.owner?(current_restaurant) %>
  <h2>Menu Items</h2>
  <ul>
    <%= render @menu_items %>
  </ul>

  <h3>Add a new item</h3>
    <%= render partial:"menu_items/new", locals:{menu_item: @menu_item, restaurant: @restaurant} %>

  <h3>Unredeemed Gifts</h3>
   <ul>
      <% @unredeemed_gifts.each do |gift| %>
        <li>
        <% if gift.receiver %>
          <%= form_for gift do |f| %>
            <%= f.submit "redeem" %>
          <% end%>
          <b>Receiver</b>:<%= gift.receiver.email %>...
        <% else%>
          <b>Receiver</b>:<%= gift.phone %>(unregistered user)
        <%end%>
        Meal: <%=gift.name %>...<b>Secret Redemption Code</b>: <%= gift.passphrase %></li>

      <%end%>
    </ul>

    <h3>Redeemed Gift Count: <%= @restaurant.redeemed_gifts.count %></h3>

<% else %>
  <h2>Menu Items</h2>

  <ul>
    <%= render partial:"menu_items/display_item", collection: @menu_items, as: :menu_item %>
  </ul>

  <%= link_to "Buy a meal for a friend", new_restaurant_gift_path(@restaurant) %>
<% end %>