<% if flash[:auth_error] %>
    <%=flash[:auth_error]%>
<% else %>
    <div id="new_tacos" >
      <%= form_for @gift, url: restaurant_gifts_path(@restaurant) do |f| %>

        <%= f.collection_select(:receiver, @receivers, :id, :combined_value, include_blank: "Option 1: Search for a user", label:false)  %>
        <%= @gift.errors[:reciever].first %>

        <%= f.text_field :phone, placeholder: "Option 2: Enter a phone number", maxlength: "10", label: false %>
        <%= @gift.errors[:phone].first %>

        <%= f.check_box :charitable, label: "Option 3: Buy a meal for a stranger" %>

        <%= f.text_area :message, size: "30x6", placeholder: "Include a personal note!", label: false  %>

        <%= f.hidden_field :menu_item, :value => "$menu_item_id" %>
        <%= f.submit "Send a meal", :class=>"button expand" %>
      <% end %>
    </div>
<% end %>