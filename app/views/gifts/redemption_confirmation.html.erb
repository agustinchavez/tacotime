<div class="row">
  <div class= "small-12 column">
<% if flash[:error] %>
  <h1><%=flash[:error]%></h1>
  <hr>
<% else  %>
  <% if flash[:notice] %>
   <h1><%=flash[:notice]%></h1>
   <hr>
  <% end %>
  <div class="success-panel text-center">
    <p>Redemption Confirmed</p>
  </div>
  <% if @gift.charitable %>
    <h4 class="text-center">
    Please make a cup of <%=@gift.name%> to earn some extra karma!
    <h4>
  <% else %>
    <h4 class="text-center">
    Please make a cup of <%=@gift.name%> and brighten up <span class="bold"><%=@gift.receiver.full_name%>'s</span> day!
    <h4>
  <% end %>
<% end %>
  </div>
</div>
<div class="row">
  <div class= "small-2 columns small-centered">
    <%= link_to "Go Back", @restaurant, :class =>"button" %>
  </div>
</div>