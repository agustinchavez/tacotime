<div class="row low_content add_content_padding">
  <% if flash[:error] %>

    <h1><%=flash[:error]%></h1>
    <hr>

  <% else  %>

    <% if flash[:notice] %>
     <h1><%=flash[:notice]%></h1>
     <hr>
    <% end %>

    <div class="success-panel text-center">
      <p>The meal has been sent </p>
    </div>


    <% if @gift.charitable %>
      <h4 class="text-center">
      Awesome! Someone just got their day made!
      <h4>
    <% elsif @gift.receiver %>
      <h4 class="text-center">
      We will send an SMS to <span class="bold"><%=@gift.receiver.full_name%></span>
      <h4>

      <h4 class="text-center">
      Then they may pick up their <span class="bold"><%=@gift.name%></span> at <span class="bold"><%=@restaurant.name%></span>.
       <h4>
    <% else %>
      <h4 class="text-center">
      We will send an SMS to <span class="bold"><%=format_phone(@gift.phone)%></span>
      <h4>

      <h4 class="text-center">
      Then your friend may pick up their <span class="bold"><%=@gift.name%></span> at <span class="bold"><%=@restaurant.name%></span>.
       <h4>
    <% end %>

    <hr>
  <%= link_to "Back to Profile", profile_path, :class =>"button expanded small-8 small-offset-2 medium-4 medium-offset-4 large-2 large-offset-5 columns text-centered" %>
  </div>

  <% end %>
  </div>